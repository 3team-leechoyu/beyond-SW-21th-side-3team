<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store.mapper.DynamicSqlMapper">
    <resultMap id="ProductResultMap" type="store.model.dto.Product">
        <result property="name" column="product_name"/>
        <result property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="price" column="price"/>
        <result property="stock" column="stock"/>
        <result property="date" column="date"/>
    </resultMap>

    <select id ="searchByName" resultMap="ProductResultMap">
        SELECT
               p.name AS product_name
             , c.name AS category_name
             , p.price
             , p.stock
             , p.date
          FROM product p
          JOIN category c on c.id = p.category_id
         WHERE 1 = 1
        <if test="name != null and name != ''">
            AND p.name LIKE CONCAT('%', #{name}, '%')
        </if>
    </select>

    <select id ="searchByCategory" resultMap="ProductResultMap">
        SELECT
        p.name AS product_name
        , c.name AS category_name
        , p.price
        , p.stock
        , p.date
        FROM product p
        LEFT JOIN category c on c.id = p.category_id
        WHERE 1 = 1
        <if test="category != null and category != ''">
            AND c.name LIKE CONCAT('%', #{category}, '%')
        </if>
    </select>
    
    <insert id="insertProduct" parameterType="store.model.dto.Product">
        INSERT INTO product
        (name, category_id, price, stock, date)
        VALUES
        (#{name}, #{categoryId}, #{price}, #{stock}, #{date})
    </insert>

    <delete id="deleteProduct" parameterType="String">
        DELETE FROM product
        WHERE name = #{name}
    </delete>

</mapper>